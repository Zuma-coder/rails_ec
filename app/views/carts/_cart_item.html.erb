<span><%= cart_item.product.name %></span>
<%= button_to '-', cart_item_path(cart_item, product_id: cart_item.product.id, quantity: cart_item.quantity - 1),
              method: :patch,
              data: { turbo_frame: "_top" },
              class: 'btn btn-sm btn-outline-secondary' %>
<span>
  <%= cart_item.quantity %>
</span>
<%= button_to '+', cart_item_path(cart_item, product_id: cart_item.product.id, quantity: cart_item.quantity + 1),
              method: :patch,
              data: { turbo_frame: "_top" },
              class: 'btn btn-sm btn-outline-secondary' %>
<span>
  <%= "#{cart_item.product.price}円" %>
</span>
<%= button_to '削除', cart_item_path(cart_item, product_id: cart_item.product.id),
              method: :delete,
              data: { turbo_frame: "_top" },
              class: 'btn btn-danger btn-sm' %>
